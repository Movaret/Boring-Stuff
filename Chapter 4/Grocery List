#Grocery List v.1

GroceryList = []
while True:
    print('Enter product name (or enter "done" to stop)')
    name = input()
    if name == 'done':
        break
    GroceryList = GroceryList + [name]
print('Total grocery list is:')
for g in GroceryList:
    print(' ' + g)



#Grocery List v.2

GroceryList = []
while True:
    print('Enter product name (or enter "done" to stop)')
    name = input()
    if name == 'done':
        break
    GroceryList = GroceryList + [name]
print('Total grocery list is:')
for g in range(len(GroceryList)):
    print('Item â„– ' + str(g) + ' in grocery list is: ' + GroceryList[g])
